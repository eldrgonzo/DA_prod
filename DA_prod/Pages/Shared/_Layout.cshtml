<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DA_prod</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DA_prod.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Karma">
    <link rel="stylesheet" href="https://www.w3schools.com/lib/w3-theme-blue.css">
    <style>
        body, h1, h2, h3, h4, h5, h6 {
            font-family: "Karma", sans-serif
        }

        .w3-bar-block .w3-bar-item {
            padding: 20px
        }
    </style>
    <script defer src="~/fontawesome/js/brands.js"></script>
    <script defer src="~/fontawesome/js/solid.js"></script>
    <script defer src="~/fontawesome/js/regular.js"></script>
    <script defer src="~/fontawesome/js/fontawesome.js"></script>
</head>
<body>
    <header>
        <!-- Sidebar (hidden by default) -->
        <nav class="w3-sidebar w3-bar-block w3-card w3-top w3-xlarge w3-animate-left" style="display:none;z-index:2;width:40%;min-width:300px" id="mySidebar">
            <a href="javascript:void(0)" onclick="w3_close()"
               class="w3-bar-item w3-button">Close Menu</a>
            <a href="..\Index" onclick="w3_close()" class="w3-bar-item w3-button">Inicio</a>
            <a href="\Ingresos\Create" onclick="w3_close()" class="w3-bar-item w3-button">Ingresos</a>
            <a href="\Egresos\Create" onclick="w3_close()" class="w3-bar-item w3-button">Egresos</a>
            <a href="\Ingresos\Index" onclick="w3_close()" class="w3-bar-item w3-button">Reportes Ingresos</a>
            <a href="\Egresos\Index" onclick="w3_close()" class="w3-bar-item w3-button">Reportes Egresos</a>
        </nav>

        <!-- Top menu -->
        <div class="w3-top">
            <div class="w3-white w3-xlarge" style="max-width:1400px;margin:auto">
                <div class="w3-button w3-padding-16 w3-left" onclick="w3_open()">☰</div>
                     <!--<div class="w3-padding-16 w3-center " >
                     <a href="\Ingresos\Index" class="w3-button">Lista de Militancia</a>
                </div>-->
               <img src="~/w3images/da_logo.jpg" class="w3-right w3-padding-16" width="100" height="100" />
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted w3-theme-13">
        <div class="container">
            <i class="fa-regular fa-copyright"></i> 2023 - <i class=" fa-regular fa-brain-circuit"</i> Drogadictos Anónimos A.C.
            <a asp-area="" asp-page="/Privacy">Sitio Institucional</a>

        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Script to open and close sidebar
        function w3_open() {
            document.getElementById("mySidebar").style.display = "block";
        }

        function w3_close() {
            document.getElementById("mySidebar").style.display = "none";
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>